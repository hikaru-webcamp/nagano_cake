<div class="container">
  <div class="row">
    <div class="col-md-6 pt-4 px-3 d-flex">
      <%= attachment_image_tag @product, :image, class: "img-fluid rounded align-self-center shadow-lg" %>
    </div>
    <div class="col-md-6 pt-4">
      <div class="product-information">
        <h1><%= @product.name %></h1>
        <h3><%= @product.introduction %></h3>
        <h1 class="mt-5">¥ <%= @product.tax_price.to_s(:delimited) %>  <span class="h6">(税込)</span></h1>
      </div>
      <div class="cart_product_add">
        <%= form_with model: @cart_product, local: true, class: "mt-3 form-inline" do |f| %>
          <%= f.hidden_field :product_id, value: @product.id %>
          <%= f.select :quantity, (1..9), { selected: 1 }, class: "custom-select mb-2" %>
          <%= f.submit "カートに入れる", class: "btn btn-success ml-sm-4 mb-2" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
