<div class="row m-3">
  <% products.each do |product| %>
    <div class="col-sm-6 col-xl-3 mb-4">
      <div class="card bg-light h-100 justify-content-between shadow-lg hover-img">
             <%= image_tag "/cake_image.jpg", size: "240x240", class: "bd-placeholder-img bd-placeholder-img-lg card-img rounded shadow-lg" %>
          <div class="card-body flex-grow-1 d-flex flex-column justify-content-between">
            <%= link_to product_path(product), class: "text-reset stretched-link" do %>
              <h5 class="card-title"><%= product.name %></h5>
            <% end %>
            <p class="card-text">ï¿¥<%= product.tax_price.to_s(:delimited) %></p>
          </div>
      </div>
    </div>
  <% end %>
</div>
