<div class="container">

        <div class="mt-5">
            <h4>配送先登録/一覧</h4>
        </div>
        
    <%= form_with model: @address, url: addresses_path, local:true do |f| %>
        
        <div class="form-group row">
          <%= f.label :postal_code, "郵便番号(ハイフンなし)", class: "form-label col-sm-3" %>
            <div class="col-sm-2">
             <%= f.text_field :postal_code, class: "form-control" %>
            </div>
        </div>
        
        <div class="form-group row">
          <%= f.label :address, "住所", class: "form-label col-sm-3" %>
            <div class="col-sm-6">
             <%= f.text_field :address, class: "form-control" %>
            </div>
        </div>
        
        <div class="form-group row">
          <%= f.label :address_name, "宛名", class: "form-label col-sm-3" %>
           <div class="col-sm-2">
             <%= f.text_field :address_name, class: "form-control" %>
        </div>
      
        <div class="form-group row">  
          <div class="col-sm-4"></div>
          <div class="col-sm-6">
            <%= f.submit "新規登録", class: "btn btn-success" %>
          </div>
        </div>
    
    <% end %>  
    
    
        <table class="table table-bordered">
            <thead>
                <tr class="table-active">
                    <th scope="col">郵便番号</th>
                    <th scope="col">住所</th>
                    <th scope="col">宛名</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
            <% @addresses.each do |address| %>
            <tr>
                <td><%= address.postal_code %></td>
                <td><%= address.address %></td>
                <td><%= address.address_name %></td>
                <td>
                    <%= link_to "編集する", edit_address_path(address.id), class:"btn btn-primary" %>
                    <%= link_to "削除する", address_path(address.id), method: :delete, class:"btn btn-danger" %>
                </td>
            </tr>
            <% end %>
            </tbody>
        </table>
    
        
    </div>
</div>